@model EntityLayer.Entities.Product
@{
    ViewBag.Title = "Ürün Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="./">Gösterge Paneli</a></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</div>

<div class="row">
    <div class="col-lg-12">
        <!-- Form Basic -->
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Form Basic</h6>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    <div class="row g-4">
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Ürün Adı</label>
                            <input type="text" name="Name" class="form-control" value="@Model.Name">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Açıklama</label>
                            <input type="text" name="Description" class="form-control" value="@Model.Description" ">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Fiyat</label>
                            <input type="text" name="Price" class="form-control" value="@Model.Price">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Stok</label>
                            <input type="text" name="Stock" class="form-control" value="@Model.Stock">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Resim</label> <br />
                            <img src="@("/Content/Image/" + Model.Image)" height="150" class="w-100" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Resim</label>
                            <input type="file" name="File" class="form-control">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Popüler</label>
                            @Html.EditorFor(x => x.Popular)
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Onay</label>
                            @Html.EditorFor(x => x.IsApproved)
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>

    </div>


</div>